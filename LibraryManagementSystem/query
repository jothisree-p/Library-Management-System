//CREATE Author_Tbl
Create table Author_Tbl(Author_code NUMBER(5) Primary key,
Author_name VARCHAR2(20) NOT NULL,
Contact_no NUMBER(10));

//Insert
Insert into Author_Tbl(Author_code,Author_name,Contact_no)values(1,'RobinSharma',8800799224);
Insert into Author_Tbl(Author_code,Author_name,Contact_no)values(2,'R.K.Narayan',9971935000);
Insert into Author_Tbl(Author_code,Author_name,Contact_no)values(3,'Paulo Coelho',1234567890);

//CREATE Book_Tbl
Create table Book_Tbl (ISBN VARCHAR2(10) PRIMARY KEY,
Book_title  VARCHAR2(20) NOT NULL,
Book_type   CHAR(1) CHECK (Book_type IN ('G','T')),
Author_code NUMBER(5) NOT NULL,
Book_cost NUMBER(8,2) NOT NULL,
CONSTRAINT fk_author FOREIGN KEY (Author_code) REFERENCES Author_Tbl(Author_code));

